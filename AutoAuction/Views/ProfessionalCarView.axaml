<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="AutoAuction.Views.ProfessionalCarView">
	<StackPanel Orientation="Horizontal">
		<!-- Left side Text-->
		<StackPanel Orientation="Vertical">
			<TextBlock Text="Trunk Dimensions" FontSize="18" Height="40"/>
			<TextBlock Text="Height:" FontSize="15" VerticalAlignment="Center"/>
			<TextBlock Text="Width:" FontSize="15" VerticalAlignment="Center"/>
			<TextBlock Text="Depth:" FontSize="15" VerticalAlignment="Center"/>
			<TextBlock Text="Engine Size:" FontSize="15" VerticalAlignment="Center" Margin="0 10 0 0"/>
			<TextBlock Text="Load Capacity:" FontSize="15" VerticalAlignment="Center" Margin="0 10 0 0"/>
			<TextBlock Text="Has Safety bar:" Grid.Row="6" FontSize="15" VerticalAlignment="Center"/>
		</StackPanel>
		<!-- Right side Answers/Input-->
		<StackPanel Orientation="Vertical" Margin="50 0 0 0">
			<TextBox MinWidth="200" Height="30" Watermark="meters"/>
			<TextBox MinWidth="200" Height="30" Watermark="meters"/>
			<TextBox MinWidth="200" Height="30" Watermark="meters"/>
			<TextBox MinWidth="200" Height="30" Watermark="liters" Margin="0 10 0 0"/>
			<TextBox MinWidth="200" Height="30" Watermark="kg" Margin="0 10 0 0"/>
			<StackPanel Orientation="Horizontal">
				<RadioButton GroupName="B" Content="Yes"/>
				<RadioButton GroupName="B" Content="No" Margin="50 0 0 0"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>



