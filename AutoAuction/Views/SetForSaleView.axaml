<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AutoAuction.ViewModels"
			 xmlns:views="using:AutoAuction.Views"
			 x:DataType="vm:SetForSaleViewModel"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             x:Class="AutoAuction.Views.SetForSaleView"
			 >

	<Grid ColumnDefinitions="1*, 1*" RowDefinitions="40, 3*, 1*, 1*, 1*" Margin="10 10 10 0">
		<TextBlock Text="Set for Sale" FontSize="25" 
				   Grid.Column="0" Grid.Row="0"
				   HorizontalAlignment="Left" VerticalAlignment="Center"/>
		<Grid Grid.Column="0" Grid.Row="1" RowDefinitions="1*, 1*, 1*, 1*" ColumnDefinitions="1*, 1*">
			<TextBlock Text="Name" FontSize="20" Grid.Row="0"/>
			<TextBox Height="40" FontSize="20" VerticalAlignment="Top"
					 Grid.Row="0" Grid.Column="1"/>
			
			<TextBlock Text="Milage" FontSize="20" Grid.Row="1"/>
			<TextBox Height="40" FontSize="20" VerticalAlignment="Top"
					 Grid.Row="1" Grid.Column="1"/>
			
			<TextBlock Text="Reg. num" FontSize="20" Grid.Row="2"/>
			<TextBox Height="40" FontSize="20" VerticalAlignment="Top"
					 Grid.Row="2" Grid.Column="1"/>
			
			<TextBlock Text="Year" FontSize="20" Grid.Row="3"/>
			<ComboBox Name="comboBox" Grid.Row="3" Grid.Column="1" MinWidth="200" >
				<!--<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text=""> </TextBlock>
					</DataTemplate>
				</ComboBox.ItemTemplate>-->
			</ComboBox>
		</Grid>
		<Grid Grid.Column="0" Grid.Row="3" 
			  RowDefinitions="1*, 1*" ColumnDefinitions="1*, 1*">
			<TextBlock Text="Starting bid" FontSize="20"/>
			<TextBox Height="40" FontSize="20" VerticalAlignment="Top" 
					 Grid.Row="0" Grid.Column="1"/>
			
			<TextBlock Text="Close Auction" FontSize="20" Grid.Row="1"/>
			<CalendarDatePicker SelectedDateFormat="Short" VerticalAlignment="Top"
								Grid.Row="1" Grid.Column="1"/>
		</Grid>
			<Button Command="{Binding}" Content="Cancel" 
					Width="150" FontSize="15" 
					HorizontalContentAlignment="Center" Grid.Row="4"/>
			<Button Command="{Binding}" Content="Create Auction" 
					Width="150" FontSize="15" HorizontalAlignment="Right"
					HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="4"/>
		<Grid Grid.Column="1" Grid.Row="1"  Width="400" Height="400">
			<StackPanel Name="vehicleStackPanel">
				<TextBlock Name="vehicleTextBlock" Text="0"/>
			<!--<ComboBox Name="vehicleBox" PlaceholderText="Pick a Vehicle Type."
					  FontSize="20" SelectedValue="vehicleType()">
				<ComboBoxItem>Truck</ComboBoxItem>
				<ComboBoxItem>Bus</ComboBoxItem>
				<ComboBoxItem>Personal Vehicle</ComboBoxItem>
				<ComboBoxItem>Professional Vehicle</ComboBoxItem>
			</ComboBox>-->
			<!--<views:CreateUserView/>-->
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
