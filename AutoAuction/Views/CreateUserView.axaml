<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AutoAuction.ViewModels"
			 x:DataType="vm:CreateUserViewModel"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
			 Width="300" Height="300"
             x:Class="AutoAuction.Views.CreateUserView">

	<StackPanel>
		<TextBlock Text="Create User" FontSize="25" Margin="0 0 0 25"/>
		<TextBox Watermark="Username" Margin="0 0 0 20"/>
		<TextBox Watermark="Password" Margin="0 0 0 20" PasswordChar="*"/>
		<TextBox Watermark="Password again" Margin="0 0 0 10" PasswordChar="*"/>
		<StackPanel Orientation="Horizontal">
			<RadioButton IsChecked="True" Content="Corporate" Margin="0 0 15 0"/>
			<RadioButton IsChecked="True" Content="Private"/>
		</StackPanel>
		<DockPanel>
			<Button Content="Cancel" Width="100" Margin="0 30 0 0"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					HorizontalAlignment="Left"/>

			<Button Content="Create" Width="100" Margin="0 30 0 0"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					HorizontalAlignment="Right"/>
		</DockPanel>
	</StackPanel>
</UserControl>
